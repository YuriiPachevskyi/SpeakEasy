<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/backgroundGreenColor"
    android:id="@+id/header_node_custom">

    <TextView
        android:id="@+id/lesson_signature"
        android:layout_width="60dp"
        android:layout_height="12dp"
        android:gravity="center"
        android:layout_row="0"
        android:layout_column="0"
        android:textSize="10sp"
        android:text="Lesson"
        android:layout_gravity="top" />
    <TextView
        android:id="@+id/lesson_number"
        android:layout_width="60dp"
        android:layout_height="20dp"
        android:gravity="center"
        android:layout_row="1"
        android:layout_column="0"
        android:textSize="18sp"
        android:layout_rowSpan="1"
        android:layout_gravity="bottom"
        android:textAlignment="center"
        android:password="false" />
    <TextView
        android:id="@+id/lesson_flag"
        android:layout_width="60dp"
        android:layout_height="18dp"
        android:gravity="center"
        android:layout_row="2"
        android:layout_column="0"
        android:textSize="12sp"
        android:text="Grammar"
        android:layout_gravity="bottom"
        android:textIsSelectable="true" />
    <TextView
        android:id="@+id/lesson_theme"
        android:layout_gravity="top|left|bottom|right"
        android:layout_height="wrap_content"
        android:layout_rowSpan="2"
        android:layout_row="0"
        android:layout_column="1"
        android:textSize="20sp"
        android:gravity="top|center"
        android:paddingLeft="-60dp"
        android:clickable="true"
        android:layout_marginTop="0dp" />

    <TextView
        android:id="@+id/lesson_button"
        android:layout_gravity="top|left|bottom|right"
        android:layout_marginTop="-4dp"
        android:layout_height="wrap_content"
        android:layout_rowSpan="1"
        android:layout_row="2"
        android:layout_column="1"
        android:textSize="16sp"
        android:text="Lesson"
        android:gravity="top|center"
        android:paddingLeft="-60dp" />
</GridLayout>